<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/contentHolder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:id="@+id/chatBotHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.5dp"
            android:background="@drawable/sender_bubble_shape">

            <LinearLayout
                android:padding="@dimen/dimen_8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="@dimen/dimen_16dp"
                    android:background="@color/colorWhite"
                    android:id="@+id/clientMessage"
                    android:lineSpacingExtra="@dimen/dimen_4dp"
                    android:textSize="@dimen/text_15sp"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:tint="@color/colorWhite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-15dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/arrow_bg1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/customer_service"
                android:id="@+id/profileOtherUser"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_8dp"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingBottom="@dimen/dimen_4dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:id="@+id/clientHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:paddingBottom="@dimen/dimen_4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp">
                <ImageView
                    android:src="@drawable/profile"
                    android:id="@+id/profileUser"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    />

            </RelativeLayout>

            <ImageView
                android:tint="@color/colorPrimary"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="-15dp"
                android:layout_marginEnd="-15dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/arrow_bg2" />

            <LinearLayout
                android:padding="@dimen/dimen_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/receiver_bubble_shape"
                android:layout_marginTop="8.7dp"
                android:orientation="vertical">


                <TextView
                    android:layout_margin="@dimen/dimen_16dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:id="@+id/botMessage"
                    android:lineSpacingExtra="@dimen/dimen_4dp"
                    android:textSize="@dimen/text_15sp"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>